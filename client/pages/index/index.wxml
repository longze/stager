<!--index.wxml-->
<view class="container">
  <!-- 头图 -->
  <view class="banner">
    <image class="banner-img" mode="widthFix" src="banner.png"></image>
    <section class="title-section">
      <text class="main-title">找过来人</text>
      <text class="subhead">随时找附近的过来人聊聊</text>
    </section>
    <section class="search-section">
      <i class="iconfont icon-search" bindtap="activeSearch"></i>
    </section>
  </view>
  <view wx:if="{{isActivedSearch}}" class="search-view">
    <input class="input"
           type="text"
           auto-focus
           confirm-type="search"
           bindconfirm="search"
           placeholder="搜索过来人"/>
    <i class="iconfont icon-search"></i>
    <text class="cancel" bindtap="cancelSearch">取消</text>
  </view>

  <view class="lbs">
    <i class="iconfont icon-local"></i> {{locationName}}
  </view>
