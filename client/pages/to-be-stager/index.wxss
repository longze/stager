/**index.wxss**/

page {
  display: block;
  background: #f8f8f8;
}

/*==== 进度条 ====*/

.progress {
  display: flex;
  width: 100%;
  background: #fff;
  color: #999;
}

.progress .text-section {
  flex: 0 0 60px;
  padding-top: 15px;
  text-align: center;
  font-size: 14px;
}

.progress .text-section:after {
  content: ' ';
  display: inline-block;
  margin: 6px 15px 20px;
  width: 12px;
  height: 12px;
  background: #999;
  border-radius: 12px;
}

.progress .line {
  flex: 2;
  border-bottom: 1px solid #999;
  max-height: 46px;
}

.progress .line-aside {
  flex: 1;
}

.active {
  color: #ff6600;
}

.progress .text-section.active:after {
  background: #ff6600;
}

.progress .line.active {
  border-color: #ff6600;
}

/*==== 文本输入域区块 ====*/

.textarea-container {
  position: relative;
  width: 100%;
  height: 90px;
  box-sizing: border-box;
  border: 1px solid #eee;
  padding: 5px 10px;
}

.input-container {
  width: 100%;
  box-sizing: border-box;
  border: 1px solid #eee;
  padding: 5px 10px;
}

.textarea-container .count {
  position: absolute;
  right: 10px;
  bottom: 10px;
  font-size: 12px;
  color: #999;
}

.textarea-section .textarea {
  display: block;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-size: 14px;
}

.input-placeholder,
.textarea-placeholder {
  font-size: 14px;
  color: #999;
}
