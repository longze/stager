/**index.wxss**/

page {
  display: block;
  background: #f8f8f8;
}

.container {
  /* 为吸底按钮留位置避免遮挡内容 */
  padding-bottom: 80px;
}

.section {
  display: block;
  box-sizing: border-box;
  width: 100%;
  margin: 10px 0 0;
  padding: 10px;
  background: #fff;
}

.section .title {
  font-size: 18px;
  line-height: 2em;
}

/*==== 头图区块 ====*/

.banner {
  position: relative;
  display: block;
  width: 100%;
  padding: 30px 0;
  text-align: center;
  background: #6d3f20;
  color: #fff;
}

.banner .icon-star {
  position: absolute;
  top: 15px;
  right: 15px;
  font-size: 22px;
}

.banner .icon-star.collected {
  color: #ff6600;
}

.banner .header-img {
  display: block;
  width: 95px;
  height: 95px;
  margin: 0 auto;
  border-radius: 95px;
  border: 1px solid #EEEEEE;
}

.banner .title {
  width: 100%;
  font-size: 18px;
  line-height: 18px;
  padding: 15px 0 0 0;
  vertical-align: middle;
}

.banner .title .name {
  display: inline-block;
  margin-right: 10px;
}

.banner .title .tag {
  display: inline-block;
  margin-right: -47px;
  border: 1px solid rgba(227, 227, 227, 0.4);
  border-radius: 2px;
  font-size: 10px;
  line-height: 10px;
  padding: 1px;
  vertical-align: middle;
}

.banner .sub {
  font-size: 16px;
  line-height: 16px;
  padding: 12px 0;
  vertical-align: middle;
}

.banner .sub .space {
  display: inline-block;
  height: 16px;
  width: 1px;
  overflow: hidden;
  margin: 0 5px;
  line-height: 16px;
  background: #fff;
  vertical-align: top;
}

.banner .address-line {
  font-size: 14px;
  line-height: 14px;
}

.banner .address-line .icon-local {
  position: relative;
  top: 1px;
  font-size: 16px;
}

/*==== 内容块 ====*/

.content-section .tag {
  display: inline-block;
  margin-left: 7px;
  border: 1px solid #FF6600;
  border-radius: 2px;
  padding: 2px 5px;
  font-size: 10px;
  line-height: 1em;
  color: #FF6600;
}

.content-section .sub {
  
}

.content-section .sub .price {
  font-size: 16px;
  color: #ff6600;
}

.content-section .sub .num {
  float: right;
  font-size: 14px;
  color: #999999;
}

.content-section .content {
  padding-top: 10px;
  font-size: 16px;
  color: #555555;
  line-height: 1.5em;
}
